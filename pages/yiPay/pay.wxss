page {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #f2f2f2;
  align-items: center;
}


.shop_name{
  width: 80%;
  margin: 20px auto;
  font-weight:bold ;
  text-align:center;
  font-size: 20px;
}

.pay_area{
  width:100%;
  height: 150px;
  background-color: #ffffff;
  margin: 30px auto;
  box-shadow: 0 0 12rpx #bbb;
}

.pay_title{
  font-size: 14px;
  padding: 10px;
}

.pay_input_area{
  display: flex;
  flex-direction: row;
}
.moeny_icon{
  padding: 22px;
  padding-right: 5px;
  font-size: 35px;
}
.pay_mark{
  margin-left:20px;


}
.mark_txt{
  color: #000;
  font-size: 14px;
}
.mark_btn{
  color: blue;
  
  font-size: 14px;
}

.input{
  width: 75%;
  height: 30px;
  padding: 16px;
  padding-bottom: 5px;
  padding-left: 5px;
  border-bottom: 1px solid #f2f2f2;
  font-size: 30px;
  font-weight:bold ;
}

.title {
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  color: #333333;
  opacity: 0.49;
  padding: 1rpx;
  line-height: 45rpx;
  border-bottom: 3rpx solid #a1a1a1;
}
.avatar {
  width: 168rpx;
  height: 168rpx;
  margin-top: 48rpx;
}

.nickname { 
  line-height: 56rpx; 
  font-size: 36rpx;
  color: #000;
  font-weight: bold;
  width: 96%;
  text-align: center;   
  margin: 20rpx auto;
}
.login-status-area {
  line-height: 36rpx;
  font-size: 36rpx;
  color: #000;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  width: 80%;
  text-align: left;
}
.btn-action {
  width: 80%;
  margin-top: 20rpx;
  margin-bottom: 12rpx;
}
.total_fee{
  color:red;font-weight:bold;
  font-size: 56rpx;
}
